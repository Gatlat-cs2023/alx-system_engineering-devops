#!/bin/bash
{ read -r W S<<<"$WATER $STIR" baseW=water baseS=stir baseB=bestchol dW=0 dS=0 i=0 lW=${#WATER} lS=${#STIR} \ while ((i<lW));do for((j=0;j<${#baseW};j++));do [[ "${W:i:1}"==${baseW:j:1} ]]&& dW=$((dW*${#baseW}+j));done;((i++));done; \ i=0;while((i<lS));do for((j=0;j<${#baseS};j++));do [[ "${S:i:1}"==${baseS:j:1} ]]&& dS=$((dS*${#baseS}+j));done;((i++));done; \ sum=$((dW+dS)) out="" bL=${#baseB}; while((sum>0));do r=$((sum%bL)); sum=$((sum/bL)); out=${baseB:r:1}$out;done; \ echo ${out:-${baseB:0:1}}; }
